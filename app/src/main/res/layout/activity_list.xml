<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/main_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_mylocation"
            android:contentDescription="Location Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <Spinner
                android:id="@+id/locationSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:prompt="@string/loc_type" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xiamen University Malaysia"
                android:textSize="14sp"
                android:textColor="#666" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_bg_row1"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40% off on all Birds Adoption"
                android:textSize="16sp"
                android:textColor="#333"
                android:textStyle="bold" />

            <Button
                android:id="@+id/exploreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:backgroundTint="#FF8A65"
                android:textColor="#FFF"
                android:layout_marginTop="8dp"
                android:layout_gravity="start" />
        </LinearLayout>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@mipmap/list_row1"
            android:contentDescription="Ad Image"
            android:scaleType="centerCrop" />
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/list_round_bg_row_2"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/cat_cat_foreground"
                    android:contentDescription="Pet Type Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cats"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/list_round_bg_row_2"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/bird_cat"
                    android:contentDescription="Pet Type Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birds"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/list_round_bg_row_2"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/dog_cat"
                    android:contentDescription="Pet Type Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dogs"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="8dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/list_round_bg_row_2"
                android:gravity="center"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/horse_cat"
                    android:contentDescription="Pet Type Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horses"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/list_bg_row3"
            android:padding="16dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/cat01"
                        android:contentDescription="Pet Image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cloud"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120 RM"
                        android:textSize="14sp"
                        android:textColor="#FF8A65" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 10 months"
                        android:textSize="12sp"
                        android:textColor="#666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/cat02"
                        android:contentDescription="Pet Image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mongo"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150 RM"
                        android:textSize="14sp"
                        android:textColor="#FF8A65" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 1 years"
                        android:textSize="12sp"
                        android:textColor="#666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/cat03"
                        android:contentDescription="Pet Image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yoyo"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="190 RM"
                        android:textSize="14sp"
                        android:textColor="#FF8A65" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 2 years"
                        android:textSize="12sp"
                        android:textColor="#666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/cat04"
                        android:contentDescription="Pet Image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bean"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="130 RM"
                        android:textSize="14sp"
                        android:textColor="#FF8A65" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 1 years"
                        android:textSize="12sp"
                        android:textColor="#666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/cat05"
                        android:contentDescription="Pet Image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bingo"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="110 RM"
                        android:textSize="14sp"
                        android:textColor="#FF8A65" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 11 months"
                        android:textSize="12sp"
                        android:textColor="#666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background"
                    android:padding="8dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@mipmap/cat06"
                        android:contentDescription="Pet Image"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tifa"
                        android:textSize="16sp"
                        android:textColor="#333"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="250 RM"
                        android:textSize="14sp"
                        android:textColor="#FF8A65" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: 18 months"
                        android:textSize="12sp"
                        android:textColor="#666" />
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
