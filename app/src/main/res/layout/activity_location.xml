<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/main_bg_color">

    <!-- 标题：Finding nearby users -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finding nearby users"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textColor="#333333" />

    <!-- 圆角容器：包含地图和匹配用户 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/main_bg_color"
        android:padding="16dp"
        android:elevation="4dp">


        <!-- 匹配用户列表 -->
        <?xml version="1.0" encoding="utf-8"?>
        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/loc_bg_map3"
                android:padding="16dp">

                <!-- 标题部分 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's new"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <!-- map container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/loc_bg_map"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp">

                    <!-- OSMDroid MapView --><org.osmdroid.views.MapView
                        android:id="@+id/map_view"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />

                    <!-- machec users -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matched users:"
                        android:textSize="16sp"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp" />

                    <!-- mached users list -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/loc_bg_user"
                        android:padding="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <!-- 用户信息部分 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Orb • female • last seen 1 minute ago"
                            android:textSize="14sp" />

                        <!-- 用户头像 -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:src="@mipmap/avatar02" />

                        <!-- 铃铛提示按钮 -->
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bell_icon"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Notification bell" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/loc_bg_user"
                        android:padding="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <!-- 用户信息部分 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hi.Q • male • last seen 3 minutes ago"
                            android:textSize="14sp" />

                        <!-- 用户头像 -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:src="@mipmap/avatar01" />

                        <!-- 铃铛提示按钮 -->
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bell_icon"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Notification bell" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/loc_bg_user"
                        android:padding="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp">

                        <!-- 用户信息部分 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ROG • male • last seen 5 minutes ago"
                            android:textSize="14sp" />

                        <!-- 用户头像 -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:src="@mipmap/avatar03" />

                        <!-- 铃铛提示按钮 -->
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bell_icon"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Notification bell" />
                    </LinearLayout>

                    <!-- 添加更多用户条目... -->

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- 分享信息容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- 标题：Share my info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share my info"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- 输入框 -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type your info here"
            android:background="@drawable/rounded_input"
            android:padding="12dp"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- 按钮行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Clear按钮 -->
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF0000"
                android:layout_marginEnd="8dp" />

            <!-- Post按钮 -->
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Post"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
