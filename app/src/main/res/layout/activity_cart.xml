<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/activity_cart"
    android:background="@drawable/main_bg_color"
    tools:context=".CartActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food and Toy Store"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/baseline_shopping_cart_24"
                android:contentDescription="Shopping Cart Icon"/>

            <TextView
                android:id="@+id/cartItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/cartIcon"
                android:layout_alignTop="@id/cartIcon"
                android:layout_marginRight="2dp"
                android:text="3"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_background"
                android:padding="2dp"
                android:gravity="center"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="src_in"
        android:background="@color/white">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/search_icom"
            android:contentDescription="Search Icon" />

        <EditText
            android:id="@+id/searchBox"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:hint="Search products"
            android:background="@android:color/white"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2030 Results"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="start"/>

        <ImageView
            android:id="@+id/filterIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:contentDescription="Filter Icon"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_marginTop="4dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:background="@drawable/loc_bg_map3"
                android:gravity="center">

                <ImageView
                    android:id="@+id/cart_row1_01"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/fdcat01"
                    android:contentDescription="Category Image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dry Food"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:background="@drawable/loc_bg_map3"
            android:gravity="center">

                <ImageView
                    android:id="@+id/cart_row1_02"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/fdcat02"
                    android:background="@drawable/loc_bg_map3"
                    android:contentDescription="Category Image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wet Food"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:background="@drawable/loc_bg_map3"
            android:gravity="center">

                <ImageView
                    android:id="@+id/cart_row1_03"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/fdcat03"
                    android:contentDescription="Category Image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Raw Food"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:background="@drawable/loc_bg_map3"
            android:gravity="center">

                <ImageView
                    android:id="@+id/cart_row1_04"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/fdcat04"
                    android:contentDescription="Category Image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homemade"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp"
                android:background="@drawable/loc_bg_map3"
            android:gravity="center">

                <ImageView
                    android:id="@+id/cart_row1_05"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/fdcat05"
                    android:contentDescription="Category Image"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treat Food"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/loc_bg_map3">

                <ImageView
                    android:id="@+id/cart_row2_01"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ct_sp01"
                    android:contentDescription="Product Image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/cart_row2_01_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chicken Meal"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/cart_row2_01_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High in protein and rich in amino acids"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 25.00"
                            android:textSize="16sp"
                            android:textColor="#FF5722"/>

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:scaleX="0.4"
                            android:scaleY="0.4"/>

                        <TextView
                            android:id="@+id/ratingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/loc_bg_map3">

                <ImageView
                    android:id="@+id/cart_row2_02"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ct_sp02"
                    android:contentDescription="Product Image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/cart_row2_02_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salmon"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/cart_row2_02_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rich in Omega-3"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/cart_row2_02_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 15.00"
                            android:textSize="16sp"
                            android:textColor="#FF5722"/>

                        <RatingBar
                            android:id="@+id/cart_row2_02_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:scaleX="0.4"
                            android:scaleY="0.4"/>

                        <TextView
                            android:id="@+id/cart_row2_02_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/loc_bg_map3">

                <ImageView
                    android:id="@+id/cart_row2_03"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ct_sp03"
                    android:contentDescription="Product Image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/cart_row2_03_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brown Rice"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/cart_row2_03_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provides carbohydrates and fiber"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/cart_row2_03_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 18.00"
                            android:textSize="16sp"
                            android:textColor="#FF5722"/>

                        <RatingBar
                            android:id="@+id/cart_row2_03_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:scaleX="0.4"
                            android:scaleY="0.4"/>

                        <TextView
                            android:id="@+id/cart_row2_03_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/loc_bg_map3">

                <ImageView
                    android:id="@+id/cart_row2_04"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ct_sp04"
                    android:contentDescription="Product Image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/cart_row2_04_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blueberries"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/cart_row2_04_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rich in vitamins and antioxidants"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/cart_row2_04_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 23.00"
                            android:textSize="16sp"
                            android:textColor="#FF5722"/>

                        <RatingBar
                            android:id="@+id/cart_row2_04_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:scaleX="0.4"
                            android:scaleY="0.4"/>

                        <TextView
                            android:id="@+id/cart_row2_04_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



    </ScrollView>

</LinearLayout>
