                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 25.00"
                            android:textSize="16sp"
                            android:textColor="#FF5722"/>

                        <!-- Adjusted Rating Bar with smaller star size -->
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:scaleX="0.4"
                            android:scaleY="0.4"/>

                        <TextView
                            android:id="@+id/ratingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_product_sample"
                    android:contentDescription="Product Image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/productTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soft Toy"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/productDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfect for playful puppies!"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 25.00"
                            android:textSize="16sp"
                            android:textColor="#FF5722"/>

                        <!-- Adjusted Rating Bar with smaller star size -->
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:scaleX="0.4"
                            android:scaleY="0.4"/>

                        <TextView
                            android:id="@+id/ratingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_product_sample"
                    android:contentDescription="Product Image"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/productTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soft Toy"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/productDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfect for playful puppies!"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/productPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 25.00"
                            android:textSize="16sp"
                            android:textColor="#FF5722"/>

                        <!-- Adjusted Rating Bar with smaller star size -->
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="0.5"
                            android:isIndicator="true"
                            android:scaleX="0.4"
                            android:scaleY="0.4"/>

                        <TextView
                            android:id="@+id/ratingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <!-- Repeat for additional products as needed -->

        </LinearLayout>



    </ScrollView>

</LinearLayout>
